/*----------------------------------------------------------------------------*/
/* Footer Menu
/*----------------------------------------------------------------------------*/

.footer-container {
    padding: 0;
    max-width: $pageMaxWidth*1px;

    .footer {
        border: none;

        .menu-container {
            padding-bottom: 80px;
            @include global-page-margin-side;

            @include breakpoint(tablet) {
                padding-bottom: 70px;
            }

            @include breakpoint(mobile) {
                padding-bottom: 50px;
            }

            h5 {
                clear: left;
                margin: 55px 0 30px 0;
                padding: 0;
                @include font-family('Roboto Bold');
                @include responsive-font-size(18);
                text-transform: uppercase;
                color: #404041;

                @include breakpoint(mobile) {
                    margin-top: 35px;
                }
            }

            ul {
                margin: 0;
                padding: 0;

                li {
                    margin: 0;
                    padding: 0;
                    @include font-family('Roboto Light');
                    @include responsive-font-size(14);
                    line-height: 2em;
                    color: #404041;

                    &.contact-address {
                        margin-left: 1.6em;

                        i {
                            margin-left: -1em;
                        }
                    }

                    &.contact-email {
                        white-space: nowrap;
                    }

                    &:before {
                        content: '>';
                        padding-right: 1em;
                    }

                    &.contact-address:before,
                    &.contact-phone:before,
                    &.contact-email:before {
                        content: '';
                        padding-right: 0;
                    }

                    // font awesome icons
                    i {
                        vertical-align: middle;
                        @include responsive-font-size(20);
                        color: #e85e5e;
                    }

                    a {
                        @include global-no-underline;
                    }
                }
            }

            .payment {
                margin: 42px 0 25px 0;

                &:after {
                    content: '';
                    //@include use-sprite('footer-payment-methods');
                }
            }
        }
    }
}

/*----------------------------------------------------------------------------*/
/* Blog Feed
/*----------------------------------------------------------------------------*/

.footer-container .blogs {

    .blog {
        clear: left;
        margin: 0 0 1em 0;

        img {
            float: left;
            margin: 0 1em 3em 0;
        }

        a {
            @include responsive-font-size(14);
            color: #404041;
        }

        .date {
            @include responsive-font-size(14);
            color: #404041;
        }
    }
}

/*----------------------------------------------------------------------------*/
/* Copyright Container
/*----------------------------------------------------------------------------*/

.copyright-container {
    padding: 0 0 20px 0;
    text-align: center;
    background-color: #404041;

    .copyright {
        border: none;
        margin: 0;
        padding: 27px 0 25px 0;
        @include font-family('Roboto Light');
        @include responsive-font-size(14);
        color: #ffffff;
    }

    .trust-container {
        margin: 0 auto;

        img {
            display: inline;
        }
    }
}
