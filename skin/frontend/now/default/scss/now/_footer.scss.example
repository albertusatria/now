/*----------------------------------------------------------------------------*/
/* Subscribe / Social
/*----------------------------------------------------------------------------*/

.footer {

    .newsletter-container {
        min-height: 70px;
        background-color: #2caae2;

        @include breakpoint(max, $desktopWidth) {
            padding: 0 20px;
        }

        @include breakpoint(mobile) {
            padding: 0 10px;
        }

        @include breakpoint(sm) {
            text-align: center;
            padding-bottom: 20px;
        }

        .newsletter-promo-container {
            margin: 21px 0 0 0;
            display: inline-block;
            vertical-align: middle;

            h3 {
                margin: 0;
                padding: 0;
                @include responsive-font-size(18);
                white-space: nowrap;
                color: #ffffff;

                @include breakpoint(mobile) {
                    white-space: normal;
                }

                &:before {
                    content: '\f003'; // fa-envelope-o
                    font-family: FontAwesome;
                    margin-right: 0.5em;
                    display: inline-block;
                }
            }
        }

        .block-subscribe {
            display: inline-block;
            vertical-align: middle;
            width: 100%;
            float: none;
            margin: 13px 0 0 0;

            @include breakpoint(sm) {
                margin-top: 0;
            }

            .block-title {
                display: none;
            }

            .block-content {
                margin: 0;

                .input-box {
                    width: 70%;

                    @include breakpoint(mobile) {
                        width: 60%;
                    }

                    #newsletter {
                        height: 34px !important;
                        border: none;
                    }
                }

                .actions {
                    width: 30%;
                    padding-left: 5px;

                    @include breakpoint(mobile) {
                        width: 40%;
                    }

                    button {
                        @include button-b2(100%, 34px);
                    }
                }
            }

            .newsletter-message {
                @include responsive-font-size(11);

                &.success-message {
                    color: #ffffff;
                }
            }
        }
    }

    .social-container {
        min-height: 70px;
        background-color: #404041;

        ul {
            margin: 0;
            padding: 16px 0 0 0;
            text-align: center;

            li {
                display: inline-block;
                margin: 0 0 0 22px;
                padding: 0;

                &:nth-child(1) {
                    margin-left: 0;

                    a {
                        //@include use-sprite('social-pinterest');

                        &:hover {
                            //@include use-sprite('social-pinterest-active');
                        }
                    }
                }

                &:nth-child(2) a {
                    //@include use-sprite('social-facebook');

                    &:hover {
                        //@include use-sprite('social-facebook-active');
                    }
                }

                &:nth-child(3) a {
                    //@include use-sprite('social-twitter');

                    &:hover {
                        //@include use-sprite('social-twitter-active');
                    }
                }

                &:nth-child(4) a {
                    //@include use-sprite('social-linkedin');

                    &:hover {
                        //@include use-sprite('social-linkedin-active');
                    }
                }

                &:nth-child(5) a {
